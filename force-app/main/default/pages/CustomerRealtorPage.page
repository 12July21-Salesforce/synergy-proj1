<apex:page standardController="Customer__c" recordSetVar="customers" extensions="CustomerRealtor_CX" lightningStylesheets="true">
    <apex:form>
        <apex:pageBlock id="realtor_list">
            <apex:pageMessages />
            <apex:pageBlockTable value="{! customers }" var="customer">
                <apex:column value="{! customer.Realtor__r.Name }" />
                <apex:column headerValue="Customers"><apex:outputLink value="{! URLFOR($Action.Customer__c.View, customer.id) }">{! customer.Name }</apex:outputLink></apex:column>
            </apex:pageBlockTable>
            <apex:pageBlockButtons>
                <apex:commandButton action="{! newRealtor }" value="New Realtor" />
            </apex:pageBlockButtons>
            <table style="width: 100%">
                <tr>
                    <td>
                        Page: &nbsp; <apex:outputText value="{! PageNumber } of {! CEILING(ResultSize / PageSize) }" />
                    </td>
                    <td align="center">
                        <!-- Previous page -->
                        <!-- active -->
                        <apex:commandLink action="{! Previous }" value="« Previous" rendered="{! HasPrevious }" />
                        <!-- inactive -->
                        <apex:commandLink style="color: #ccc" value="« Previous" rendered="{! NOT(HasPrevious) }" />
                        &nbsp;&nbsp;
                        <!-- Next page -->
                        <!-- active -->
                        <apex:commandLink action="{! Next }" value="Next »" rendered="{! HasNext }" />
                        <!-- inactive -->
                        <apex:commandLink style="color: #ccc" value="Next »" rendered="{! NOT(HasNext) }" />
                    </td>
                    <td align="right">
                        Records per page:
                        <apex:selectList value="{! PageSize }" size="1">
                            <apex:selectOption itemValue="5" itemLabel="5"/>
                            <apex:selectOption itemValue="20" itemLabel="20"/>
                            <apex:actionSupport event="onchange" reRender="realtor_list"/>
                        </apex:selectList>
                    </td>
                </tr>
            </table>
        </apex:pageBlock>
    </apex:form>
</apex:page>