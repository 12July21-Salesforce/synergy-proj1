<apex:page standardController="Customer__c" recordSetVar="customers" lightningStylesheets="true" extensions="CustomerRealtor_CX">
    <apex:form>
        <apex:pageBlock>
            <apex:pageMessages />
            <apex:pageBlockTable value="{! customers }" var="customer">
                <apex:column>
                    <apex:facet name="header">{! customer.Realtor__r.Name }</apex:facet>
                    <apex:outputField value="{! customer.Name }" />
                </apex:column>
            </apex:pageBlockTable>
            <apex:pageBlockButtons>
                <apex:commandButton action="{! newRealtor }" value="New Realtor" />
            </apex:pageBlockButtons>
        </apex:pageBlock>
    </apex:form>
</apex:page>